<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label(:name, "名前:")  %>
    <%= f.text_field :name, class: "form-control" , placeholder: "名前を入力して下さい" %>
  </div>
  <div class="form-group">
    <%= f.label(:age, "年齢:")  %>
    <%= f.text_field :age, class: "form-control" , placeholder: "年齢を入力して下さい" %>
  </div>
  <div class="form-group">
    <%= f.label(:body, "内容:")  %>
    <%= f.text_area :body, class: "form-control" , placeholder: "内容を入力して下さい" %>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>